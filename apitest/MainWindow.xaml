<Window x:Class="apitest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:apitest"
        mc:Ignorable="d"
        Title="Shareboard" Height="650" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" x:Name="tbID" Margin="96,82,96,33" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20"/>
        <PasswordBox Grid.Row="1" x:Name="tbPassword" Margin="96,144,96,126" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20" Grid.RowSpan="2" PasswordChar="●"/>
        <Button Grid.Row="2" x:Name="btnLogin" Click="btnLogin_Click" Margin="134,77,134,43" Content="로그인"/>
        <TextBlock Grid.Row="3" Text="{Binding Token}"/>
    </Grid>
</Window>
